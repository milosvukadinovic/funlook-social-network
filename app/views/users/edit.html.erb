<div class="container">
<div class="row">
<div class="col-md-3"> </div>
<div class="col-md-6"> 
<h1>Set your profile</h1>
  <br/>
  <%= form_for current_user  do |f| %>
    <%= f.hidden_field :id, value:current_user.id %>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name,class:"form-control"%>
    </div>
    <div class="form-group">
    <%= f.label :bio%>
    <%= f.text_field :bio,class:"form-control"%>
    </div>

    <div class="custom-file">
      <%= f.label :picture,class:"custom-file-label" %>
      <%= f.file_field :picture,class:"custom-file-input" %>
    </div>
     <%= f.submit "Set changes",class:"btn btn-secondary",style:"margin-top:1rem;" %>
    <% end %>

  </div>
</div>
<div class="col-md-3"> </div>
</div>