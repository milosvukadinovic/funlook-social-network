<% if resource.errors.any? %>
<div class="alert-container container"> 
<div class="row"> 
<% resource.errors.full_messages.each do |message| %>
<div class="col-md-3"> </div>
<div class="col-md-6"> 
    <div class="alert alert-danger"> <%= message %> </div>
</div>
<div class="col-md-3"> </div>
<% end %>
</div>
</div>
<% end %>